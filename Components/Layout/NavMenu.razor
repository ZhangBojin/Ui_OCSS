                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> 主页
            </NavLink>
        </div>
        *@
    </nav>
</div>

@code 
{
    private List<NavItem>? _navItems;

    protected override async Task OnInitializedAsync()
    {
        Http.BaseAddress = new Uri("http://localhost:5246/");
        var json = await Http.GetStringAsync("Test_Nav.json");
        _navItems = System.Text.Json.JsonSerializer.Deserialize<List<NavItem>>(json)!;
    }

    private class NavItem
    {
        public required string Href { get; set; }
        public required string Name { get; set; }
        public required string Icon { get; set; }
    }
}

